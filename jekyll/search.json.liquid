---
layout: null
permalink: /search.json
sitemap: false
---
{
  "docs": [
  {%- assign docs = site.posts | concat: site.pages | concat: site.contributors -%}
  {%- assign docs = docs | where_exp: "d", "d.search != false" -%}
  {%- for d in docs -%}
    {
      "title": {{ d.title | default: d.name | to_json }},
      "url": {{ d.url | relative_url | to_json }},
      "tags": {{ d.tags | default: empty | to_json }},
      "categories": {{ d.categories | default: empty | to_json }},
      "excerpt": {{ d.excerpt | default: d.content | strip_html | strip_newlines | truncate: 220 | to_json }}
    }{%- unless forloop.last -%},{%- endunless -%}
  {%- endfor -%}
  ]
}
